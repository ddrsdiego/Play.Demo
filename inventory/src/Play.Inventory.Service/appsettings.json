{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "AppName": "Inventory"
  },
  "MongoSettings": {
    "Host": "localhost",
    "Port": "27017"
  },
  "HttpClientsSettings": {
    "Clients": [
      {
        "ServiceName": "CatalogClient",
        "BaseAddress": "http://localhost:5045/",
        "HandlerLifetimeInMinutes": 5,
        "TimeoutInSeconds": 1,
        "RequestEndpoints": [
          {
            "Path": "items",
            "AcceptedHeaders": [
              "json"
            ]
          },
          {
            "Path": "items/{id}",
            "RouteParameters": [
              {
                "Name": "id",
                "Type": "System.String"
              }
            ],
            "AcceptedHeaders": [
              "json"
            ]
          }
        ]
      }
    ]
  }
}